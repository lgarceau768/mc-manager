# Copy this file to build/.env and adjust the values before running
# ./build/build-image.sh. Any value left commented out will fall back
# to the defaults baked into the Dockerfile.

# Name/tag for the resulting Docker image
IMAGE_NAME=mc-server-manager
IMAGE_TAG=latest

# Base Node.js image to use
NODE_VERSION=20-alpine

# Backend configuration defaults baked into the image
NODE_ENV=production
PORT=3001
DATABASE_PATH=/data/database/servers.db
SERVERS_DATA_PATH=/data/servers
# Host path used when the manager creates Minecraft containers.
# This must be the real host path that you also mount in with -v.
SERVERS_DATA_PATH_HOST=/var/lib/mc-manager/servers
PUBLIC_SERVER_HOST=host.docker.internal
PORT_RANGE_START=25565
PORT_RANGE_END=25600
LOG_LEVEL=info
FRONTEND_DIST_PATH=/app/frontend
MODPACKS_PATH=/data/modpacks
